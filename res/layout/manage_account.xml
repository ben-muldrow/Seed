<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Toolbar android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/toolbar"
             android:elevation="5dp"
             android:background="#ef7f71">

        <TextView   android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/manageAccountTextView"
                    android:text="Manage Account  "
                    android:textSize="36dp"
                    android:textColor="#444"
                    android:gravity="center_horizontal"/>
    </Toolbar>

    <RelativeLayout android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#28D4CB"
                >

                <Button android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editInformationButton"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="Edit Info"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                />

                <Button android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/logOutButton"
                        android:text="Log Out"
                        android:textSize="14sp"
                        android:layout_alignBaseline="@+id/editInformationButton"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        />

                <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addProfileButton"
                        android:layout_alignBaseline="@+id/logOutButton"
                        android:layout_centerHorizontal="true"
                        android:text="add profile"
                        android:textSize="14sp"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/manageWelcomeTextView"
                        android:layout_below="@+id/logOutButton"
                        android:text="Hello."
                        android:textSize="14dp"
                        android:textColor="#444"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"/>

        <ListView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/profilesListView"
                  android:layout_below="@+id/manageWelcomeTextView"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="10dp"
                  android:background="#fff"
                  android:choiceMode="singleChoice"
        >

        </ListView>
    </RelativeLayout>

</LinearLayout>