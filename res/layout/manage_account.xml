<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Toolbar android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:id="@+id/toolbar"
             android:elevation="5dp"
             android:background="#ef7f71">

        <TextView   android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/manageAccountTextView"
                    android:text="Manage Account  "
                    android:textSize="36sp"
                    android:textColor="#444"
                    android:gravity="center_horizontal"/>
    </Toolbar>

    <RelativeLayout android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#28D4CB"
                >
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchButton"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Search for Plants"
                android:textSize="14sp"
                android:elevation="4dp"
        />

                <Button android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/editInformationButton"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:text="Update Info"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                />

                <Button android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/logOutButton"
                        android:text="Log Out"
                        android:textSize="14sp"
                        android:layout_alignBaseline="@+id/editInformationButton"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        />

                <Button android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addProfileButton"
                        android:layout_alignBaseline="@+id/logOutButton"
                        android:layout_centerHorizontal="true"
                        android:text="add profile"
                        android:textSize="14sp"
                />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/manageWelcomeTextView"
                        android:layout_below="@+id/logOutButton"
                        android:text="Hello."
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"/>

                <RelativeLayout android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:layout_below="@id/manageWelcomeTextView"
                                android:layout_above="@id/searchButton"
                             android:layout_marginTop="10dp"
                             android:layout_marginBottom="10dp"
                             android:layout_marginEnd="10dp"
                             android:layout_marginStart="10dp"
                             android:background="#fff"
                             android:elevation="5dp"
                >
                    <TextView android:layout_width="150dp"
                              android:layout_height="wrap_content"
                              android:id="@+id/profileNameTextView"
                              android:textColor="#444"
                              android:textSize="14sp"
                              android:text="Profile Name:"
                              android:layout_marginStart="5dp"
                              android:layout_marginTop="10dp"
                    />

                    <TextView android:layout_width="150dp"
                              android:layout_height="wrap_content"
                              android:id="@+id/profileNameValueTextView"
                              android:layout_alignBaseline="@id/profileNameTextView"
                              android:layout_alignParentEnd="true"
                              android:layout_marginEnd="5dp"
                              android:text="No profile made yet!"
                              android:textColor="#444"
                    />

                    <TextView android:layout_width="150dp"
                              android:layout_height="wrap_content"
                              android:id="@+id/experienceLabelTextView"
                              android:textColor="#444"
                              android:textSize="14sp"
                              android:text="Experience:"
                              android:layout_below="@id/profileNameTextView"
                              android:layout_marginStart="5dp"
                              android:layout_marginTop="10dp"
                    />

                    <TextView android:layout_width="150dp"
                              android:layout_height="wrap_content"
                              android:id="@+id/experienceLevelTextView"
                              android:textColor="#444"
                              android:textSize="14sp"
                              android:text="N/A"
                              android:layout_alignBaseline="@id/experienceLabelTextView"
                              android:layout_marginStart="5dp"
                              android:layout_marginEnd="5dp"
                              android:layout_marginTop="10dp"
                              android:layout_alignParentEnd="true"
                    />

                    <TextView android:layout_width="150dp"
                              android:layout_height="wrap_content"
                              android:id="@+id/locationTextView"
                              android:textColor="#444"
                              android:textSize="14sp"
                              android:text="Location: "
                              android:layout_marginStart="5dp"
                              android:layout_marginTop="10dp"
                              android:layout_below="@id/experienceLabelTextView"
                    />

                    <TextView android:layout_width="150dp"
                              android:layout_height="wrap_content"
                              android:id="@+id/locationValueTextView"
                              android:textColor="#444"
                              android:textSize="14sp"
                              android:text="N/A"
                              android:layout_marginStart="5dp"
                              android:layout_marginEnd="5dp"
                              android:layout_marginTop="10dp"
                              android:layout_alignBaseline="@id/locationTextView"
                              android:layout_alignParentEnd="true"
                    />

                    <TextView android:layout_width="150dp"
                              android:layout_height="wrap_content"
                              android:id="@+id/plantPrefTextView"
                              android:textColor="#444"
                              android:textSize="14sp"
                              android:text="Plant Type Preference: "
                              android:layout_marginStart="5dp"
                              android:layout_marginTop="10dp"
                              android:layout_below="@id/locationTextView"
                    />

                    <TextView android:layout_width="150dp"
                              android:layout_height="wrap_content"
                              android:id="@+id/plantPrefValTextView"
                              android:textColor="#444"
                              android:textSize="14sp"
                              android:text="N/A"
                              android:layout_marginStart="5dp"
                              android:layout_marginEnd="5dp"
                              android:layout_marginTop="10dp"
                              android:layout_alignBaseline="@id/plantPrefTextView"
                              android:layout_alignParentEnd="true"
                    />

                </RelativeLayout>


    </RelativeLayout>

</LinearLayout>